\subsection{Biterm Topic Model plots}
\subsubsection{Example 1}

<<>>=
library(BTM)
library(ggraph)
library(concaveman)
library(igraph)
data(example_btm, package = 'textplot')
model <- example_btm
plt <- plot(model, title = "BTM model", top_n = 5)
plt
@

<<fig=TRUE, echo=FALSE, width=8, height=6>>=
print(plt)
@

<<>>=
